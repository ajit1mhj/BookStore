@model IEnumerable<StockDisplayModel>
@{

}
<h2>Stocks</h2>

<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form-control w-25"
    palceholder="Search By Book" />
    <button type="submit" class="btn btn-primary">Find</button>
    <a asp-action="Index" asp-controller="Stock" class="btn btn-secondary">Clear</a>

</form>
<table class="table table-bordered">

        <tr>
            <th>Book </th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookName</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="ManageStock" asp-controller="Stock" asp-route-bookId="@item.BookId">Update Stock</a>
                </td>
            </tr>
        }

</table>