@model BookDTO

<div class="container mt-4">
    <div class="card shadow-sm" style="max-width: 600px;">
        <div class="card-body">

            <h2 class="mb-3">Update Book</h2>

            <a asp-action="Index"
               asp-controller="Book"
               class="btn btn-secondary mb-3">
                ← Back
            </a>

            <form asp-action="UpdateBook"
                  asp-controller="Book"
                  method="post"
                  enctype="multipart/form-data">

                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Image" />

                <div class="mb-3">
                    <label asp-for="BookName" class="form-label"></label>
                    <input asp-for="BookName" class="form-control" />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AuthorName" class="form-label"></label>
                    <input asp-for="AuthorName" class="form-control" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GenreId" class="form-label"></label>
                    <select asp-for="GenreId"
                            asp-items="Model.GenreList"
                            class="form-select">
                        <option value="">-- Select Genre --</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price"
                           type="number"
                           step="0.01"
                           class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Current Image</label>

                    @if (!string.IsNullOrWhiteSpace(Model.Image))
                    {
                        <div class="mb-2">
                            <img src="~/images/@Model.Image"
                                 alt="Book Image"
                                 class="img-thumbnail"
                                 style="width:120px; height:100px;" />
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No image available</p>
                    }

                    <label asp-for="ImageFile" class="form-label mt-2"></label>
                    <input asp-for="ImageFile"
                           type="file"
                           class="form-control" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        Update Book
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
